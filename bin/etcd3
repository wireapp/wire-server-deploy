#!/usr/bin/env bash

# TODO move to ansible/files and put onto kubernetes nodes after installing kubernetes
# TODO 2 - add to kubespray upstream, potentially.

export ETCDCTL_API=3
export ETCDCTL_CA_FILE=/etc/ssl/etcd/ssl/ca.pem
export ETCDCTL_CERT=/etc/ssl/etcd/ssl/member-$(hostname).pem
export ETCDCTL_KEY=/etc/ssl/etcd/ssl/member-$(hostname)-key.pem

/usr/local/bin/etcdctl "$@"
